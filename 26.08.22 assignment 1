#include <stdio.h>

int main()
{
    char str[100];
    scanf("%[^\n]s",str);
    int count=0;
    int i;
    for(i=0;i<str(str)-1;i++)
    {
        
        if(str[i]==' ' && is alpha(str[i+1]) && (i>0))
        {
            count++;
        }
    }
    count++;
    printf("Total number of words:%d",count);

    return 0;
}
